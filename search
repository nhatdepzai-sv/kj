import { Search, AlertTriangle, CheckCircle, Info } from "lucide-react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import type { Medication, SearchMedication } from "@shared/schema";

interface SearchResultsProps {
  results: Medication[];
  searchCriteria: SearchMedication | null;
}

export default function SearchResults({ results, searchCriteria }: SearchResultsProps) {
  const getConfidenceBadge = (confidence: string) => {
    switch (confidence) {
      case "high":
        return (
          <div className="bg-green-50 border border-green-200 rounded-md p-3">
            <div className="flex items-start">
              <CheckCircle className="h-5 w-5 text-green-600 mt-0.5" />
              <div className="ml-2">
                <h4 className="text-sm font-medium text-green-800">High Confidence Match</h4>
              </div>
            </div>
          </div>
        );
      case "medium":
        return (
          <div className="bg-orange-50 border border-orange-200 rounded-md p-3">
            <div className="flex items-start">
              <AlertTriangle className="h-5 w-5 text-orange-600 mt-0.5" />
              <div className="ml-2">
                <h4 className="text-sm font-medium text-orange-800">Lower Confidence Match</h4>
                <p className="text-sm text-orange-700">Partial match - verify additional characteristics</p>
              </div>
            </div>
          </div>
        );
      default:
        return (
          <div className="bg-yellow-50 border border-yellow-200 rounded-md p-3">
            <div className="flex items-start">
              <Info className="h-5 w-5 text-yellow-600 mt-0.5" />
              <div className="ml-2">
                <h4 className="text-sm font-medium text-yellow-800">Usage Information</h4>
              </div>
            </div>
          </div>
        );
    }
  };

  if (!searchCriteria && results.length === 0) {
    return (
      <Card className="bg-white shadow-sm border border-gray-200">
        <CardHeader>
          <CardTitle className="text-xl font-semibold text-gray-900">Search Results</CardTitle>
        </CardHeader>
        <CardContent>
          <div className="p-12 text-center">
            <Search className="mx-auto h-12 w-12 text-gray-400" />
            <h3 className="mt-4 text-lg font-medium text-gray-900">Ready to Search</h3>
            <p className="mt-2 text-gray-500">
              Enter medication characteristics in the form to start identifying your medication.
            </p>
          </div>
        </CardContent>
      </Card>
    );
  }

  if (results.length === 0) {
    return (
      <Card className="bg-white shadow-sm border border-gray-200">
        <CardHeader>
          <div className="flex items-center justify-between">
            <CardTitle className="text-xl font-semibold text-gray-900">Search Results</CardTitle>
            <span className="text-sm text-medical-gray">0 matches found</span>
          </div>
        </CardHeader>
        <CardContent>
          <div className="p-12 text-center">
            <Search className="mx-auto h-12 w-12 text-gray-400" />
            <h3 className="mt-4 text-lg font-medium text-gray-900">No matches found</h3>
            <p className="mt-2 text-gray-500">
              Try adjusting your search criteria or contact a healthcare professional for assistance.
            </p>
            <Button className="mt-4 bg-medical-blue text-white hover:bg-blue-700">
              Contact Support
            </Button>
          </div>
        </CardContent>
      </Card>
    );
  }

  return (
    <Card className="bg-white shadow-sm border border-gray-200">
      <CardHeader>
        <div className="flex items-center justify-between">
          <CardTitle className="text-xl font-semibold text-gray-900">Search Results</CardTitle>
          <span className="text-sm text-medical-gray">
            {results.length} match{results.length !== 1 ? "es" : ""} found
          </span>
        </div>
      </CardHeader>
      <CardContent>
        <div className="space-y-6">
          {results.map((medication) => (
            <div
              key={medication.id}
              className={`border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow ${
                medication.confidence === "medium" ? "opacity-75" : ""
              }`}
            >
              <div className="flex flex-col md:flex-row gap-6">
                <div className="md:w-1/3">
                  <img
                    src={medication.imageUrl}
                    alt={`${medication.name} - ${medication.shape} ${medication.color} medication`}
                    className="w-full h-48 object-cover rounded-lg border border-gray-200 cursor-pointer hover:opacity-90 transition-opacity"
                  />
                  <p className="mt-2 text-xs text-medical-gray text-center">
                    Click to view larger image
                  </p>
                </div>
                <div className="md:w-2/3 space-y-4">
                  <div>
                    <h3 className="text-lg font-semibold text-gray-900">
                      {medication.confidence === "medium" ? "Possible Match: " : ""}
                      {medication.name}
                    </h3>
                    <p className="text-medical-gray">Generic Name: {medication.genericName}</p>
                  </div>

                  <div className="grid grid-cols-2 gap-4 text-sm">
                    <div>
                      <span className="font-medium text-gray-700">Manufacturer:</span>
                      <span className="text-medical-gray ml-1">{medication.manufacturer}</span>
                    </div>
                    <div>
                      <span className="font-medium text-gray-700">NDC:</span>
                      <span className="text-medical-gray ml-1">{medication.ndc}</span>
                    </div>
                    <div>
                      <span className="font-medium text-gray-700">Shape:</span>
                      <span className="text-medical-gray ml-1 capitalize">{medication.shape}</span>
                    </div>
                    <div>
                      <span className="font-medium text-gray-700">Color:</span>
                      <span className="text-medical-gray ml-1 capitalize">{medication.color}</span>
                    </div>
                  </div>

                  <div>
                    <span className="font-medium text-gray-700">Imprint:</span>
                    <Badge variant="secondary" className="ml-2">
                      {medication.imprint}
                    </Badge>
                  </div>

                  {getConfidenceBadge(medication.confidence)}

                  <div className="bg-blue-50 border border-blue-200 rounded-md p-3">
                    <div className="flex items-start">
                      <Info className="h-5 w-5 text-blue-600 mt-0.5" />
                      <div className="ml-2">
                        <h4 className="text-sm font-medium text-blue-800">Usage Information</h4>
                        <p className="text-sm text-blue-700">{medication.usage}</p>
                      </div>
                    </div>
                  </div>

                  <div className="flex space-x-3">
                    <Button className="bg-medical-blue text-white hover:bg-blue-700">
                      View Full Details
                    </Button>
                    <Button variant="outline" className="text-medical-gray hover:bg-gray-50">
                      Report Issue
                    </Button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </CardContent>
    </Card>
  );
}
